#include<iostream> 
#include<stdio.h> 
#include<math.h> 
#include<iomanip> 
 
#define pi 3.14 
using namespace std; 
double F(double x) 
{ 
 double eps = 0.001, n = 1, a1 = pi / 2, a2 = ((-1) * (n - 1) / n) * 1 / ((2 * n - 1) * x *(2*n - 1) / n), f = a1; 
 if (fabs(x) > 1) 
 { 
  while (fabs(a2 - a1) <= eps) 
  { 
   f += a2; 
   n++; 
   a1 = a2; 
   a2 = ((-1) * (n - 1) / n) * 1 / ((2 * n - 1) * x * (2*n - 1) / n); 
  } 
  return f; 
 } 
 else return 0; 
} 
